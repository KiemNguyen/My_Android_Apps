<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">
    <!--android:id="@+id/"-->

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="My Nanodegree Apps!"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#1A237E" />

    <Button
        android:id="@+id/spotifyStreamerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/footballScoresButton"
        android:layout_alignLeft="@+id/footballScoresButton"
        android:layout_alignRight="@+id/footballScoresButton"
        android:layout_alignStart="@+id/footballScoresButton"
        android:layout_below="@+id/titleTextView"
        android:layout_marginTop="30dp"
        android:background="#3F51B5"
        android:padding="15dp"
        android:text="Spotify Streamer"
        android:textColor="#E8EAF6"
        android:textSize="15dp" />

    <Button
        android:id="@+id/footballScoresButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/libraryButton"
        android:layout_alignLeft="@+id/libraryButton"
        android:layout_alignRight="@+id/libraryButton"
        android:layout_alignStart="@+id/libraryButton"
        android:layout_below="@+id/spotifyStreamerButton"
        android:layout_marginTop="10dp"
        android:background="#3F51B5"
        android:padding="15dp"
        android:text="Scores App"
        android:textColor="#E8EAF6"
        android:textSize="15dp" />

    <Button
        android:id="@+id/libraryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/buildItBiggerButton"
        android:layout_alignLeft="@+id/buildItBiggerButton"
        android:layout_alignRight="@+id/buildItBiggerButton"
        android:layout_alignStart="@+id/buildItBiggerButton"
        android:layout_below="@+id/footballScoresButton"
        android:layout_marginTop="10dp"
        android:background="#3F51B5"
        android:padding="15dp"
        android:text="Library App"
        android:textColor="#E8EAF6"
        android:textSize="15dp" />

    <Button
        android:id="@+id/buildItBiggerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/xYZReaderButton"
        android:layout_alignLeft="@+id/xYZReaderButton"
        android:layout_alignRight="@+id/xYZReaderButton"
        android:layout_alignStart="@+id/xYZReaderButton"
        android:layout_below="@+id/libraryButton"
        android:layout_marginTop="10dp"
        android:background="#3F51B5"
        android:padding="15dp"
        android:text="Build It Bigger"
        android:textColor="#E8EAF6"
        android:textSize="15dp" />

    <Button
        android:id="@+id/xYZReaderButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/capstoneButton"
        android:layout_alignLeft="@+id/capstoneButton"
        android:layout_alignRight="@+id/capstoneButton"
        android:layout_alignStart="@+id/capstoneButton"
        android:layout_below="@+id/buildItBiggerButton"
        android:layout_marginTop="10dp"
        android:background="#3F51B5"
        android:padding="15dp"
        android:text="XYZ Reader"
        android:textColor="#E8EAF6"
        android:textSize="15dp" />

    <Button
        android:id="@+id/capstoneButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/xYZReaderButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="#3F51B5"
        android:padding="15dp"
        android:text="Capstone: My Own App"
        android:textColor="#E8EAF6"
        android:textSize="15dp" />
</RelativeLayout>